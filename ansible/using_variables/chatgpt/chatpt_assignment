---
- name: deploy nginx 
  hosts: webserver
  become: yes
  tasks:
    - name: install nginx
      ansible.builtin.apt:
        name: nginx
        update_cache: yes
    - name: start the service
      ansible.builtin.service:
      name: httpd
      state: started
    - name: copy index file
      ansible.builtin.copy:
      src: index.html
      dest: /var/www/html
      owner: ubuntu
      group: ubuntu